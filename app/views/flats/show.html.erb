<h1>SHOW FLAT</h1>
<h2><%= @flat.title %></h2>
<h2><%= @flat.stars %></h2>
<p><%= @flat.description %></p>
<p><%= @flat.address %></p>
<p><%= link_to "EMAIL", email_flat_path(@flat) %></p>

<%= link_to "EDIT", edit_flat_path(@flat) %>
<br>
<%= link_to "DELETE", flat_path(@flat), method: :delete, data: { confirm: "are you sure ?"} %>
<br>
<h2><%= link_to "LEAVE A REVIEW", new_flat_review_path(@flat) %></h2>
<ul>
  <% @flat.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <%= link_to "DELETE", review, method: :delete, data: { confirm: "are you sure ?"} %>
  </li>
  <% end %>
</ul>
<%= link_to "RETOUR", flats_path %>



